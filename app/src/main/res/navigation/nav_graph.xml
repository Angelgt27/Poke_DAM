<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginUsuarioFragment">

    <fragment
        android:id="@+id/listaPokemonFragment"
        android:name="com.example.poke_dam.ui.view.ListaPokemonFragment"
        android:label="fragment_lista_pokemon"
        tools:layout="@layout/fragment_lista_pokemon" >
        <action
            android:id="@+id/action_listaPokemonFragment_to_capturaFragment"
            app:destination="@id/capturaFragment" />
        <action
            android:id="@+id/action_listaPokemonFragment_to_detallePokemonFragment"
            app:destination="@id/detallePokemonFragment" />
    </fragment>
    <fragment
        android:id="@+id/capturaFragment"
        android:name="com.example.poke_dam.ui.view.CapturaFragment"
        android:label="fragment_captura"
        tools:layout="@layout/fragment_captura" >
        <action
            android:id="@+id/action_capturaFragment_to_listaPokemonFragment"
            app:destination="@id/listaPokemonFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginUsuarioFragment"
        android:name="com.example.poke_dam.ui.view.LoginUsuarioFragment"
        android:label="fragment_login_usuario"
        tools:layout="@layout/fragment_login_usuario" >
        <action
            android:id="@+id/action_loginUsuarioFragment_to_listaPokemonFragment"
            app:destination="@id/listaPokemonFragment" />
        <action
            android:id="@+id/action_loginUsuarioFragment_to_registrarUsuarioFragment"
            app:destination="@id/registrarUsuarioFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrarUsuarioFragment"
        android:name="com.example.poke_dam.ui.view.RegistrarUsuarioFragment"
        android:label="fragment_registrar_usuario"
        tools:layout="@layout/fragment_registrar_usuario" >
        <action
            android:id="@+id/action_registrarUsuarioFragment_to_loginUsuarioFragment"
            app:destination="@id/loginUsuarioFragment" />
    </fragment>
    <fragment
        android:id="@+id/detallePokemonFragment"
        android:name="com.example.poke_dam.ui.view.DetallePokemonFragment"
        android:label="fragment_detalle_pokemon"
        tools:layout="@layout/fragment_detalle_pokemon" >
        <action
            android:id="@+id/action_detallePokemonFragment_to_listaPokemonFragment"
            app:destination="@id/listaPokemonFragment" />
    </fragment>
</navigation>